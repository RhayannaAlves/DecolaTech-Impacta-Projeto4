@{
}
@model Tarefa

<div class="container">
<h2>Adicionar Tarefa</h2>
<hr />
    <form asp-action="Create" method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="TarefaTitulo" class="control-label">Título</label>
            <input asp-for="TarefaTitulo" class="form-control" />
            <span asp-validation-for="TarefaTitulo" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="DataInicio" class="control-label">Data de Início</label>
            <input asp-for="DataInicio" class="form-control"/>
            <span asp-validation-for="DataInicio" class="text-danger"></span>
        </div>
        <div class="col-3">
            <label asp-for="DataFim" class="control-label">Data Fim</label>
            <input asp-for="DataFim" class="form-control"/>
            <span asp-validation-for="DataFim" class="text-danger"></span>
        </div>
        <div class="col-9">
            <label asp-for="Descricao" class="control-label">Descrição</label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Status" class="control-label">Status</label>
            <select asp-for="Status" class="form-select" aria-label="Default select example">
                <option selected>Selecionar Status</option>
                <option value="Pendente">Pendente</option>
                <option value="Concluída">Concluída</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Adicionar" class="btn btn-primary"</
        </div>
    </form>

    <div>
        <a asp-action="Index">Voltar</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


