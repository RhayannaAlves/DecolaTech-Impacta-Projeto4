@{
}
@model List<Tarefa>

<div class="container">
    <h2>Lista de Tarefas</h2>
    <br />

    <p>
        <a asp-action="Create" class="btn btn-primary">Adicionar Tarefa</a>
        <a asp-action="TarefasPendentes" class="btn btn-warning">Tarefas Pendentes</a>
        <a asp-action="TarefasConcluidas" class="btn btn-success">Tarefas Concluídas</a>

    </p>
    <br />

    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-center">TarefaID</th>
                <th class="text-center">Título</th>
                <th class="text-center">Status</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarefa in Model)
            {
                <tr>
                    <td class="text-center">@tarefa.TarefaId</td>
                    <td class="text-center">@tarefa.TarefaTitulo</td>
                    <td class="text-center">@tarefa.Status</td>
                    <td class="col text-center">
                        <a asp-action="Details" asp-route-id="@tarefa.TarefaId" class="btn btn-secondary">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@tarefa.TarefaId" class="btn btn-primary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@tarefa.TarefaId" class="btn btn-danger">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>