@{
}
@model List<Tarefa>

<div class="container">
    <h2>Lista de Tarefas Pendentes</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-center">TarefaID</th>
                <th class="text-center">Título</th>
                <th class="text-center">Status</th>
                <th class="text-center">Data Inicio</th>
                <th class="text-center">Data Prevista Fim</th>
                <th class="text-center">Data Fim</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var tarefa in Model)
            {
                if (tarefa.Status == "Pendente")
                {
                    <tr>
                        <td class="text-center">@tarefa.TarefaId</td>
                        <td class="text-center">@tarefa.TarefaTitulo</td>
                        <td class="text-center">@tarefa.Status</td>
                        <td class="text-center">@tarefa.DataInicio.ToString("MM/dd/yyyy")</td>
                        <td class="text-center">@tarefa.DataPrevistaFim?.ToString("MM/dd/yyyy")</td>
                        <td class="text-center">@tarefa.DataFim?.ToString("MM/dd/yyyy")</td>

                        <td class="col text-center">
                            <a asp-action="Details" asp-route-id="@tarefa.TarefaId" class="btn btn-secondary">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@tarefa.TarefaId" class="btn btn-primary">Editar</a>
                            <a asp-action="Delete" asp-route-id="@tarefa.TarefaId" class="btn btn-danger">Deletar</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div>
        <a asp-action="Index">Voltar</a>
    </div>
</div>

